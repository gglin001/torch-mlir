{
    // used in docker container
    // https://github.com/gglin001/cpp_demos/blob/master/Dockerfile
    "cmake.configureArgs": [
        "-DLLVM_EXTERNAL_PROJECTS=torch-mlir;torch-mlir-dialects",
        "-DLLVM_ENABLE_PROJECTS=llvm;mlir"
    ],
    "cmake.configureSettings": {
        // "CMAKE_PREFIX_PATH": "/opt/conda/envs/pyenv",
        // "CMAKE_SYSROOT": "/opt/conda/envs/pyenv/x86_64-conda-linux-gnu/sysroot",
        "CMAKE_INSTALL_PREFIX": "install",
        // "LLVM_ENABLE_PROJECTS": "mlir",
        "LLVM_EXTERNAL_TORCH_MLIR_SOURCE_DIR": "${workspaceFolder}",
        "LLVM_EXTERNAL_TORCH_MLIR_DIALECTS_SOURCE_DIR": "${workspaceFolder}/externals/llvm-external-projects/torch-mlir-dialects",
        "MLIR_ENABLE_BINDINGS_PYTHON": "ON",
        "LLVM_TARGETS_TO_BUILD": "host",
        "TORCH_MLIR_ENABLE_JIT_IR_IMPORTER": "ON",
        // "CMAKE_CXX_FLAGS": "-fuse-ld=lld"
        // "Python3_EXECUTABLE": "/opt/conda/envs/pyenv/bin/python",
        "VERBOSE": "1",
        // "TORCH_MLIR_ENABLE_LTC": "ON",
        "TORCH_MLIR_ENABLE_LTC": "OFF",
    },
    "cmake.sourceDirectory": "${workspaceFolder}/externals/llvm-project/llvm",
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}/build/tools/torch-mlir/python_packages/torch_mlir",
        // "PYTHONPATH": "${workspaceFolder}/build/install/python_packages/torch_mlir",
        "PATH": "${workspaceFolder}/build/bin:${env:PATH}",
    },
    "python.analysis.extraPaths": [
        "${workspaceFolder}/python",
        // "./build/tools/torch-mlir/python_packages/torch_mlir",
        // "./build/install/python_packages/torch_mlir"
    ],
    // "clangd.path": "/opt/conda/envs/pyenv/bin/clangd",
}
